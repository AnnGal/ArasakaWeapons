<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="art.manguste.android.arasakaWeapons">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ArasakaMainTheme">
        <activity
            android:name="art.manguste.android.arasakaWeapons.PlacedOrderActivity"
            android:parentActivityName="art.manguste.android.arasakaWeapons.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="art.manguste.android.arasakaWeapons.MainActivity" />
        </activity>
        <activity
            android:name="art.manguste.android.arasakaWeapons.OrderActivity"
            android:theme="@style/ArasakaTheme" />
        <activity
            android:name="art.manguste.android.arasakaWeapons.CardDetailActivity"
            android:theme="@style/ArasakaBlackToolbarTheme" />
        <activity android:name="art.manguste.android.arasakaWeapons.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>