<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:id="@+id/card_view"
    android:layout_marginTop="4dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_image_in_cart"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_description_product_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/arasaka_logo" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/product_name"
            style="@style/TextLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:paddingVertical="@dimen/card_text_padding_vertical"
            android:paddingHorizontal="@dimen/card_text_padding_horizontal"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_main"
            app:layout_constraintStart_toEndOf="@+id/id_image_in_cart"
            tools:text="Card title"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/card_text_padding_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_image_in_cart"
            app:layout_constraintTop_toTopOf="@+id/guideline_main">

            <ImageButton
                android:id="@+id/action_decrease_count"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_button_remove_dark_empty"
                android:gravity="center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_items_count"
                style="@style/TextLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/card_text_padding_horizontal"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorDarkBackground"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/action_increase_count"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorArasakaBackground"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:src="@drawable/ic_button_add_dark_empty"
                android:visibility="visible" />

            <TextView
                android:id="@+id/label_multiplication"
                style="@style/TextLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:text="@string/sign_multiplication" />

            <TextView
                android:id="@+id/tv_price_card"
                style="@style/TextLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="@string/test_price" />

            <TextView
                android:id="@+id/label_equals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:text="@string/sign_equality"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_price_card_total"
                style="@style/TextLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="@string/test_price" />

            <TextView
                android:id="@+id/label_currency"
                style="@style/TextLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="@string/currency_2077" />

            <View
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_action_delete_from_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/action_delete_from_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="4dp"
                    android:background="@color/colorArasakaBackground"
                    android:gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_remove_from_order"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_move_to_cart_from_card"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/frame_for_letters"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="7dp"
                android:scaleType="center"
                android:text="@string/go_to_cart"
                android:textAllCaps="true"
                android:textColor="@color/colorArasakaRed"
                android:textSize="10sp"
                android:visibility="gone" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>