<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ArasakaTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" >
        <item name="colorPrimaryDark">@color/colorDarkBackground</item>
        <item name="colorPrimary">@color/colorArasakaRed</item>
        <item name="colorAccent">@color/colorSkyBlue</item>
        <item name="android:actionBarWidgetTheme">@color/colorDarkBackground</item>
    </style>

    <style name="ArasakaMainTheme" parent="ArasakaTheme" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ArasakaTabTheme" parent="ArasakaMainTheme" >
        <item name="colorPrimary">@color/colorArasakaBackground</item>
        <item name="colorAccent">@color/colorArasakaRed</item>
    </style>

    <style name="ArasakaBlackToolbarTheme" parent="ArasakaMainTheme" >
        <item name="colorPrimary">@color/colorDarkBackground</item>
        <item name="android:textColorSecondary">@color/colorArasakaRed</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="ArasakaMainTheme">
        <item name="android:textColorSecondary">@color/colorArasakaRed</item>
    </style>

    <style name="TextBottomToolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="TextMessage">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextCard">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextProductCard" parent="TextCard">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">top</item>
    </style>


    <style name="TextOrderCard" parent="TextCard">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextOrder">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextOrderTitle" parent="TextOrder">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>